<section class="single-band-section">

  <h1 class="band-name"><%= @band.band_name %></h1>
  <div class="container">
    <div class="row">
      <div class="band-profile col-md-6">
        <h3>About <%= @band.band_name %></h3>
        <% if @band.avatar? %>
        <%= image_tag @band.avatar.url %>
        <% else %>
        <%=	image_tag('http://www.onlineworldofwrestling.com/wp-content/uploads/2012/06/stone_cold_steve_austin_01.png', class: 'stock-photo')  %>
        <% end %>
        <p>From: <%= @band.city %>, <%= @band.state %></p>
        <p>Formed on: <%=	@band.start_date.to_formatted_s(:long_ordinal) %></p>
        <p>Bio: <%= @band.bio %></p>
      </div>
      <div class="discography col-md-6">
        <h3>Discography</h3>
        <% @albums.each do |a| %>
            <p>
              <%= image_tag('https://www.smashingmagazine.com/images/music-cd-covers/1-2.jpg', class: 'album-art') %>
              <p><%= a.title %>, <%= a.release_date.to_formatted_s(:long_ordinal) %></p>
            </p>
        <% end %>
      </div>
    </div>
  </div>

</section>

